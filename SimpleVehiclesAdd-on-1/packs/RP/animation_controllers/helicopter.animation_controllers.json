{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.simple_vehicles_classic_helicopter.loop": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["off"],
					"transitions": [
						{"walking": "!query.is_saddled"}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": ["loop_idle"],
					"transitions": [
						{"idle": "query.is_saddled"},
						{"flying": "!query.is_on_ground"}
					],
					"blend_transition": 0.2
				},
				"flying": {
					"animations": ["loop"],
					"transitions": [
						{"walking": "query.is_on_ground"}
					]
				}
			}
		}
	}
}