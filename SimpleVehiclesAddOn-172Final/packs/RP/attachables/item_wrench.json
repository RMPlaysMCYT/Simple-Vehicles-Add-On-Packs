{
    "format_version": "1.16.100",
    "minecraft:attachable": {
        "description": {
            "identifier": "simple_vehicles:wrench",
            "materials": {
                "default": "entity_alphatest"
            },
            "textures": {
                "default": "textures/entity/sim_veh_items/wrench"
            },
            "geometry": {
                "default": "geometry.simple_vehicles.wrench"
            },
            "render_controllers": [
                "controller.render.default"
            ],
            "animations": {
                "thirdperson_main_hand": "animation.wrench.thirdperson_main_hand",
                "firstperson_main_hand": "animation.wrench.firstperson_main_hand"
            },
            "scripts": {
                "pre_animation": [
                    "v.main_hand = c.item_slot == 'main_hand';"
                ],
                "animate": [
                    {
                        "thirdperson_main_hand": "v.main_hand && !c.is_first_person"
                    },
                    {
                        "firstperson_main_hand": "v.main_hand && c.is_first_person"
                    }
                ]
            }
        }
    }
}